<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="#85e6ba"
    android:foreground="?attr/selectableItemBackground"

    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true"
    app:elevation="0dp">

    <RelativeLayout
        android:id="@+id/sport_bg_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="sport_bg">

        <ImageView
            android:id="@+id/iv_sport_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_high_knees" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#96000000" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_sport_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="高抬腿"
        android:textColor="#FFF"
        android:textSize="42sp"
        android:transitionName="sport_text" />

    <ImageView
        android:id="@+id/iv_finish"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="end|center_vertical"
        android:layout_margin="15dp"
        android:src="@drawable/ic_finish"
        android:visibility="gone" />
</android.support.v7.widget.CardView>